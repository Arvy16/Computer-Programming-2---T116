#include <stdio.h>
#include <stdlib.h>

int main(){
FILE*fptr;
char name[250];
int i, id, total, average, student;
int math, science, english;

fptr=fopen("gante.txt","w");
if(fptr==NULL){
printf("Error!");
exit(1);
}
printf("Number of students: ");
scanf("%d", &student);

for(i=0; i<student; i++){
    printf("Student name: ");
    scanf("\n%[^\n]s", &name);
    printf("Student ID#: ");
    scanf("%d", &id);
    printf("Math grade: ");
    scanf("%d", &math);
    printf("Science grade: ");
    scanf("%d", &science);
    printf("English grade: ");
    scanf("%d", &english);
}
total=math+science+english;
printf("Total grade = %d", total);
average=(math+science+english)/3;
printf("\nGrade average = %d\n", average);

fprintf(fptr,"%s %d %d %d", name, id, average, total);
fclose(fptr);

}
